# AdaptivQ Environment Variables Template
# Copy this file to .env and fill in your values

# ================================
# Application Configuration
# ================================
FLASK_APP=Integration.py
FLASK_ENV=development
FLASK_DEBUG=1
NODE_ENV=development

# ================================
# Database Configuration (PostgreSQL)
# ================================
POSTGRES_DB=adaptivq
POSTGRES_USER=adaptivq_user
POSTGRES_PASSWORD=changeme_secure_password
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${POSTGRES_DB}

# ================================
# Redis Configuration
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ================================
# Celery Configuration
# ================================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/2

# ================================
# AWS Configuration
# ================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ================================
# API Keys & Credentials
# ================================
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Credentials (JSON format)
FIREBASE_CREDENTIALS='{
  "type": "service_account",
  "project_id": "your-project-id",
  "private_key_id": "your-key-id",
  "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n",
  "client_email": "firebase-adminsdk@your-project.iam.gserviceaccount.com",
  "client_id": "your-client-id",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40your-project.iam.gserviceaccount.com"
}'

# ================================
# Security & Encryption
# ================================
SECRET_KEY=your_flask_secret_key_change_this
JWT_SECRET_KEY=your_jwt_secret_key_change_this

# ================================
# CORS Configuration
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ================================
# Feature Flags
# ================================
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# ================================
# Email Configuration (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# ================================
# Rate Limiting (Optional)
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour

# ================================
# Monitoring & Observability (Optional)
# ================================
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key
DATADOG_API_KEY=your_datadog_key
